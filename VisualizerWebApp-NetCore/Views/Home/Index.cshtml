@{
    ViewData["Title"] = "Home Page";
}

<div>
<form method="post" enctype="multipart/form-data" asp-controller="UploadFiles" asp-action="Index">
    <div class="form-group">
        <div class="col-md-10">
            <label>Upload zipfile</label>
            <input type="file" name="formFile" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>
</div>

<div>
    <form method="post" enctype="multipart/form-data" asp-controller="GitHubContent" asp-action="Index">
        <div class="form-group">
            <div class="col-md-10">
                <label>GitHub repo URL</label>
                <input type="text" name="repoUrl"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Render bindings" />
            </div>
        </div>
    </form>
</div>
